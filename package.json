{
  "name": "projects",
  "version": "0.1.0",
  "description": "Batch management of your git projects.",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "prettier": "prettier --config .prettierrc --write \"src/**/*.{ts,tsx,js}\" webpack.config.js",
    "prettier-watch": "onchange \"**/*.{js,ts,tsx,json}\" -- npm run prettier"
  },
  "author": "Pavol Hejn√Ω<me@pavolhejny.com>",
  "devDependencies": {
    "@types/glob": "^5.0.35",
    "@types/shelljs": "^0.7.8",
    "@types/superagent": "^3.5.8",
    "electron": "^1.8.4",
    "tslint": "^5.9.1",
    "glob": "^7.1.2",
    "shelljs": "^0.8.1",
    "superagent": "^3.8.2",
    "prettier": "^1.12.1",
    "typescript": "^3.0.1"
  }
}
